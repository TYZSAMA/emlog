<IfModule mod_rewrite.c>
	# RewriteEngine 打开URL重写模块
	RewriteEngine on
	# 重写根目录，博客在网站根目录则改为/
	#RewriteBase /
	# 显示日志规则
	RewriteRule ^showlog-([0-9]+)\.html$ index.php?action=showlog&gid=$1
	# 日志归档
	RewriteRule ^record-([0-9]+)\.html$ index.php?record=$1
	RewriteRule ^date-([0-9]+)-record-([0-9]+)\.html$ index.php?date=$1&record=$2
	# tag规则
	RewriteRule ^tag\.html$ index.php?action=tag
	RewriteRule ^tag-(.+)\.html$ index.php?action=taglog&tag=$1
</IfModule>